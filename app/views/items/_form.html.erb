<%= form_for(@item) do |f| %>
  <fieldset>

    <% if @item.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

        <ul>
        <% @item.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="clearfix">
      <%= f.label :name %>
      <div class="input"><%= f.text_field :name, class: 'span7' %></div>
    </div>

    <div class="clearfix">
      <%= f.label :tags %>
      <div class="input"><%= f.text_field :tags, class: 'span7 autocomplete_with_tags', 'data-pre' => f.object.prepopulate_tags.to_json %></div>
    </div>

    <div class="clearfix">
      <%= f.label :image %>
      <div class="input"><%= f.file_field :image, class: 'span7' %></div>
    </div>

    <div class="actions">
      <%= f.submit class: 'btn primary' %>
      <%= link_to t('.cancel'), root_path, class: 'btn' %>
    </div>
  </fieldset>
<% end %>
